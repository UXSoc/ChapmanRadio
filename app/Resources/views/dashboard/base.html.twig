{% extends 'layout/base.html.twig' %}


{% block head %}
    <script src="{{ asset('bundles/vendor.js') }}"></script>
{% endblock %}

{% block body %}

    {%
        set menu = [
            {'name' : 'Dashboard', 'route' : 'dashboard_index'},
            {'name' : 'Shows',
                'sub_menu': [
                    {name: 'All Shows', route : 'dashboard_shows'},
                    {name: 'Add New', route : 'dashboard_new_show'},
                    {name: 'Categories', route : 'dashboard_show_categories'},
                    {name: 'Tags', route : 'dashboard_show_tags'}
                ]
            },
            {'name' : 'Posts',
                'sub_menu': [
                    {name: 'All Shows', route : 'dashboard_posts'},
                    {name: 'Add New', route : 'dashboard_new_post'},
                    {name: 'Categories', route : 'dashboard_post_categories'},
                    {name: 'Tags', route : 'dashboard_post_tags'}
                ]
            },
            {'name' : 'Comments','route' : 'dashboard_comments'},
            {'name' : 'Users',
                'sub_menu': [
                    {name: 'All Users', route : 'dashboard_users'},
                    {name: 'Add New', route : 'dashboard_new_user'}
                ]
            },
            {'name' : 'Settings','route' : 'dashboard_settings'}
        ]

    %}

    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('dashboard_index') }}">ChapmanRadio Dashboard</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href=""><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li><a href="{{ path('dashboard_user_settings_profile') }}"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
            </ul>

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        {% block menu %}
                            {% include 'dashboard/dashboard_menu.html.twig' with {'items': menu} %}
                        {% endblock %}
                        {#{% block sub-menu %}#}
                        {#{{ block('sub-menu') }}#}

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
        </nav>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"> {% block pageHeader %} Blank {% endblock %}</h1>
                    </div>
                    {% block content %}{% endblock %}
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <script src="{{ asset('bundles/dashboard.js') }}"></script>

    </div>



{% endblock %}